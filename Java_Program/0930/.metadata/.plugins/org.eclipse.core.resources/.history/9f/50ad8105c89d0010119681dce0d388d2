package sec02;

import java.util.Scanner;

abstract class Shape {
    protected String name;

    public Shape(String name) {
        this.name = name;
    }

    public String getName() {
        return name;
    }

    public abstract double getArea();
}

class Rectangle extends Shape {
    private int width;
    private int height;

    public Rectangle(String name, int width, int height) {
        super(name);
        this.width = width;
        this.height = height;
    }

    public int getWidth() {
        return width;
    }

    public int getHeight() {
        return height;
    }

    @Override
    public double getArea() {
        return width * height;
    }
}

class Circle extends Shape {
    private double radius;

    public Circle(String name, double radius) {
        super(name);
        this.radius = radius;
    }

    public double getRadius() {
        return radius;
    }

    @Override
    public double getArea() {
        return Math.PI * 2 * radius;
    }
}

public class ShapeTest2 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // 직사각형 입력
        System.out.print("가로 입력: ");
        int width = scanner.nextInt();
        System.out.print("세로 입력: ");
        int height = scanner.nextInt();

        Rectangle rect = new Rectangle("직사각형", width, height);

        // 원 입력
        System.out.print("반지름 입력: ");
        double radius = scanner.nextDouble();

        Circle circle = new Circle("도넛", radius);

        // 출력
        System.out.printf("\n가로 %d, 세로 %d",rect.getWidth(),rect.getHeight());	
        System.out.println("\nRectangle Draw!!");
        System.out.println("================================");
        System.out.println("name\t\twidth\theight\tarea");
        System.out.printf("%s\t\t%d\t%d\t%.1f\n", rect.getName(), rect.getWidth(), rect.getHeight(), rect.getArea());

        System.out.println("\nCircle Draw!!");
        System.out.printf("반지름 %.1f\n", circle.getRadius());
        System.out.println("================================");
        System.out.println("name\tradius\tarea");
        System.out.printf("%s\t%.1f\t%.14f\n", circle.getName(), circle.getRadius(), circle.getArea());

        scanner.close();
    }
}

