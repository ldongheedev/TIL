package sec02;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class MyPhoto extends JFrame {

	//멤버변수 정의
	JLabel lblTitle, lblImg;
	JButton btn;
	
	//생성자
	MyPhoto(){
		setTitle("이미지 보이기");
		
		//컴포넌트 생성
		lblTitle = new JLabel("가을단풍");
		lblImg = new JLabel("~~~~");
		btn = new JButton("변경");
		
		//컴포넌트 부착
		add(lblTitle, "North");
		add(lblImg, "Center");
		add(btn, "South");
		
		setSize(400, 300);
		setVisible(true);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
