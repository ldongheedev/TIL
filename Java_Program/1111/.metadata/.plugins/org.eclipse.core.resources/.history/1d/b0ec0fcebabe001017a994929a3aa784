package sec01;

import javax.swing.*; //클래스, 인터페이스 포함, 하위 패키지는 포함하지 않음
import java.awt.*; //배치관리자 정의
import java.awt.event.*; // 리스너 인터페이스 정의


public class MyInfo extends JFrame{
	
	//멤버변수
	JButton btn1, btn2;
	JLabel lbl;
	
	//생성자
	MyInfo() {
		setTitle("독립된 클래스로 이벤트 리스너 만들기");
		setLayout(new FlowLayout());
		
		//컴포넌트 생성
		
		btn1 = new JButton("나의 이름");
		btn2 = new JButton("나의 꿈");
		lbl = new JLabel("결과값이 보여요")
		//컴포넌트 부착
		add(btn1);
		add(btn2);
		add(lbl);
		//2. 리스너 등록
		//My1 m1 = new My1();
		btn1.addActionListener(new My1());
		btn2.addActionListener(new My2());
		addMouseListener(new MyHouse());
		
		setSize(300,300);
		setVisible(true);
	}
	
	//2. 내부 클래스로 정의
	// 확인 버튼
	class My1 implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent e) {
			// 실행할 코드
			
			
		}
		
	}
	
	// 취소 버튼
	class My2 implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent e) {
			// 실행할 코드
			
				
			
		}
		
	}
	
	//내부 클래스로 마우스 리스너 구형
	class MyMouse implements MouseListener{
		
		@Override
		public void mouseClicked(MouseEvent e) {
			
		}

		@Override
		public void mousePressed(MouseEvent e) {
			
			int x = e.getX();
			int y = e.getY();
			lbl.setLocation(x, y);
				
		}

			@Override
			public void mouseReleased(MouseEvent e) {
			}

			@Override
			public void mouseEntered(MouseEvent e) {
			}

			@Override
			public void mouseExited(MouseEvent e) {
			}
			
		}


	

	public static void main(String[] args) {
		new MyInfo();
		
	}

}