package sec02;

import javax.swing.*; //클래스, 인터페이스 포함, 하위 패키지는 포함하지 않음
import java.awt.*; //배치관리자 정의
import java.awt.event.*; // 리스너 인터페이스 정의


//익명의 클래스 정의
public class EventTest1 extends JFrame{
	
	//멤버변수
	JButton btn1, btn2,btn3;
	
	//생성자
	EventTest1() {
		setTitle("독립된 클래스로 이벤트 리스너 만들기");
		setLayout(new FlowLayout());
		
		//컴포넌트 생성
		btn1 = new JButton("확인");
		btn2 = new JButton("취소");

		//컴포넌트 부착
		add(btn1);
		add(btn2);

		//2. 리스너 등록
		//My1 m1 = new My1();
		//확인 버튼이 눌러지면 윈도우 제목 변경하기
		
		btn1.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				setTitle("확인버튼을 눌렀군요");
				
			}
		});
		
		btn2.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				setTitle("취소버튼을 눌렀군요");
				
			}
		});
		
		
		
		setSize(300,300);
		setVisible(true);
	}
	

	public static void main(String[] args) {
		new EventTest1();
		
	}

}
