package sec02;

import javax.swing.*; //클래스, 인터페이스 포함, 하위 패키지는 포함하지 않음
import java.awt.*; //배치관리자 정의
import java.awt.event.*; // 리스너 인터페이스 정의


public class EventTest1 extends JFrame{
	
	//멤버변수
	JButton btn1, btn2,btn3;
	
	//생성자
	EventTest1() {
		setTitle("독립된 클래스로 이벤트 리스너 만들기");
		setLayout(new FlowLayout());
		
		//컴포넌트 생성
		btn1 = new JButton("확인");
		btn2 = new JButton("취소");
		btn3 = new JButton("배경색");
		//컴포넌트 부착
		add(btn1);
		add(btn2);
		add(btn3);
		//2. 리스너 등록
		//My1 m1 = new My1();
		btn1.addActionListener(new My1());
		btn2.addActionListener(new My2());
		btn3.addActionListener(new My3());
		
		setSize(300,300);
		setVisible(true);
	}
	
	//2. 내부 클래스로 정의
	// 확인 버튼
	class My1 implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent e) {
			// 실행할 코드
			if(btn1.getText().equals("확인"))
				btn1.setText("OK");
			else
				btn1.setText("확인");
			
		}
		
	}
	
	// 취소 버튼
	class My2 implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent e) {
			// 실행할 코드
			if(btn2.getText().equals("취소"))
				btn2.setText("Cancel");
			else
				btn2.setText("취소");
			
		}
		
	}
	
	//배경색 버튼
	class My3 implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent e) {
			// 실행할 코드
			if(btn3.getText().equals("배경색")) {
				btn1.setBackground(Color.green);
				btn2.setBackground(Color.green);
			}
			else {
				btn1.setBackground(Color.white);
				btn2.setBackground(Color.white);
			}
		}
		
	}

	public static void main(String[] args) {
		new EventTest1();
		
	}

}
