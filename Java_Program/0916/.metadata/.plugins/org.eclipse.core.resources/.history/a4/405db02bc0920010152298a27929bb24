package sec02;

class Song{
	//멤버 변수 이름, 노래제못
	String name;
	String title;
	int age;
	
	//생성자 정의
	Song(String name, String title, int age){
		this.name=name;
		this.title=title;
		this.age=age;
	}
}

public class SongTest {

	public static void main(String[] args) {
		//객체 배열 생성
		//일반적인 배열
		//int [] arr = {10, 20, 30};
		//int [] arr = new int[5];
		//Song [] list = {new Song("아이유", "밤편지")};
		Song s1=new Song("아이유", "밤편지", 20);
		Song s2=new Song("아이유", "밤편지", 25);
		Song s3=new Song("아이유", "밤편지", 26);
		
		Song [] list= {s1, s2, s3};
		//Song [] list = new Song[5];
		//조회, ....
		/*for(int i=0; i<list.length; i++)
			System.out.println(list[i].name+list[i].title+list[i].age);
		*/
		//for~each 문
		for(Song s : list)
			System.out.println(s.name + s.title + s.age);
		
		int sum = 0;
		double avg;
		
		for(Song s:list) {
			System.out.println(s.name+s.title);
			sum += s.age;
		}
		
		avg=(double)sum/list.length;
		System.out.println("age average : %.1f",avg);
	}

}
